.row-fluid
  .span12
    .span7
      .page-header
        %h2= @swatch.name
        %p.byline
          #{@swatch.created_at.strftime("%b %d, %Y")} <i>by</i> #{link_to @swatch.user.try(:username), user_path(@swatch.user)}
      = simple_form_for @swatch do |f|
        = render 'editor', f: f

    .span5
      #swatches.show
        = render @swatch
      = render 'actions'

      %p.description= @swatch.description